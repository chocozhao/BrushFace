<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.yzf.king.ui.activitys.MerchApplyPhotoActivity">

    <include layout="@layout/title_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/merch_apply_photo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/ysf_text_size_10"
                android:layout_marginTop="@dimen/ysf_text_size_10"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:text="上传经营资质" />

                <TextView
                    style="@style/text_normal_style"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="*"
                    android:textColor="@color/btn_yellow_dark"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ysf_text_size_12"
                android:layout_marginTop="@dimen/ysf_text_size_18">

                <ImageView
                    android:id="@+id/merch_apply_photo_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_sound_photo_add_iv" />

                <TextView
                    android:id="@+id/merch_apply_photo_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/merch_apply_photo_add_iv"
                    android:layout_toRightOf="@+id/merch_apply_photo_add_iv"
                    android:padding="5dp"
                    android:text="tips"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_tip"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/merch_apply_photo_context_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merch_apply_photo_add_iv"
                    android:layout_alignLeft="@+id/merch_apply_photo_add_iv"
                    android:layout_marginTop="@dimen/ysf_text_size_10"
                    android:layout_marginBottom="@dimen/ysf_text_size_20"
                    android:text="请根据你的经营内容，上传对应的资质许可证"
                    android:textColor="@color/btn_yellow_dark" />
            </RelativeLayout>
            <include layout="@layout/line_h" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:text="上传店铺照片" />

                <TextView
                    style="@style/text_normal_style"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="*"
                    android:textColor="@color/btn_yellow_dark"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ysf_text_size_12"
                android:layout_marginTop="@dimen/ysf_text_size_18"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/merch_apply_photo_store_head_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_sound_photo_store_head" />

                <ImageView
                    android:id="@+id/merch_apply_photo_store_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ysf_text_size_10"
                    android:layout_marginBottom="@dimen/ysf_text_size_18"
                    android:background="@mipmap/shop_sound_photo_store" />

                <TextView
                    android:id="@+id/merch_apply_photo_store_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/merch_apply_photo_add_iv"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@+id/merch_apply_photo_add_iv"
                    android:padding="5dp"
                    android:text="tips"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_tip"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ysf_text_size_12"
                android:layout_marginTop="@dimen/ysf_text_size_18"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/merch_apply_photo_store_one_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_sound_photo_store1" />

                <ImageView
                    android:id="@+id/merch_apply_photo_store_two_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ysf_text_size_10"
                    android:layout_marginRight="@dimen/ysf_text_size_10"
                    android:background="@mipmap/shop_sound_photo_store2" />

                <ImageView
                    android:id="@+id/merch_apply_photo_store_three_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_sound_photo_store3" />

                <TextView
                    android:id="@+id/merch_apply_photo_storenumber_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/merch_apply_photo_add_iv"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@+id/merch_apply_photo_add_iv"
                    android:padding="5dp"
                    android:text="tips"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_tip"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/merch_apply_photo_context2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ysf_text_size_12"
                android:layout_marginTop="@dimen/ysf_text_size_18"
                android:layout_marginBottom="@dimen/ysf_text_size_20"
                android:text="照片包括3张，店内1张、门头1张、店面街道一张"
                android:textColor="@color/btn_yellow_dark"
                android:visibility="gone"
                />
            <include layout="@layout/line_h" />
            <Button
                android:id="@+id/merch_apply_photo_define_bt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/ysf_text_size_18"
                android:background="@color/btn_blue"
                android:text="下一步"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
