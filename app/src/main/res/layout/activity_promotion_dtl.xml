<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yzf.king.ui.activitys.OrderManagePromotionDtlActivity">

    <include layout="@layout/title_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ysf_text_size_10"
        android:layout_marginBottom="@dimen/ysf_text_size_10"
        android:background="@color/white">

        <ImageView
            android:id="@+id/promotion_dtl_hear_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:background="@mipmap/shop_manage_hear" />

        <TextView
            android:id="@+id/promotion_dtl_title_tv"
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:layout_toRightOf="@+id/promotion_dtl_hear_iv"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/promotion_dtl_stauts_tv"
            style="@style/text_tip_style"
            android:layout_below="@+id/promotion_dtl_title_tv"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:layout_toRightOf="@+id/promotion_dtl_hear_iv"
            android:text=""
            android:textColor="@color/btn_blue" />
    </RelativeLayout>
    <include layout="@layout/line_h" />

    <LinearLayout
        android:id="@+id/promotion_dtl_receipt_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/promotion_dtl_receiptname_tv"
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="收款支付宝账户:" />

        <TextView
            android:id="@+id/promotion_dtl_receipt_tv"
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="" />

    </LinearLayout>

    <include layout="@layout/line_h" />

    <LinearLayout
        android:id="@+id/promotion_dtl_mail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/promotion_dtl_acc_tv"
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="邮箱:" />

        <TextView
            android:id="@+id/promotion_dtl_mail_tv"
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="" />

    </LinearLayout>

    <include layout="@layout/line_h" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/ysf_text_size_20"
        android:background="@drawable/proxy_btn_bg"
        >
        <ImageView
            android:id="@+id/promotion_dtl_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/logo"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/promotion_dtl_remarks_tv"
            android:layout_below="@+id/promotion_dtl_iv"
            style="@style/text_normal_style"
            android:text="请使用申请的支付宝账户扫描确认授权"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/ysf_text_size_10"
            />
    </RelativeLayout>

</LinearLayout>
