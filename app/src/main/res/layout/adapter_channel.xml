<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:foreground="@drawable/selector_foreground"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/channel_name_adapter"
            style="@style/text_normal_color_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="渠道" />

        <TextView
            android:id="@+id/channel_desc_adapter"
            style="@style/text_tip_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1.3dp"
            android:layout_toRightOf="@+id/channel_name_adapter"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="描述" />

        <TextView
            android:id="@+id/channel_status_adapter"
            style="@style/text_tip_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1.3dp"
            android:text="开通" />
    </LinearLayout>

</LinearLayout>
