<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="middle"
    android:orientation="vertical"
    tools:context="com.yzf.king.ui.activitys.ShopManageDetailActivity">

    <include layout="@layout/title_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:text="商铺名称:" />

        <TextView
            android:id="@+id/shopmanagedetail_shopname_tv"
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/text_normal_style"
            android:text="营业执照名称:" />

        <TextView
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="xxx服装店" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:text="编号:" />

        <TextView
            android:id="@+id/shopmanagedetail_shopId_tv"
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:text="法人姓名:" />

        <TextView
            android:id="@+id/shopmanagedetail_name_tv"
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/shopmanagedetail_receipt_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="收款支付宝账户:" />

        <TextView
            android:id="@+id/shopmanagedetail_receipt_tv"
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/shopmanagedetail_mail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="邮箱:" />

        <TextView
            android:id="@+id/shopmanagedetail_mail_tv"
            style="@style/text_normal_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:text="商家电话:" />

        <TextView
            android:id="@+id/shopmanagedetail_phone_tv"
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text=""
            android:textColor="@color/btn_blue" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:text="状态:" />

        <TextView
            android:id="@+id/shopmanagedetail_status_tv"
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:text="注册时间:" />

        <TextView
            android:id="@+id/shopmanagedetail_date_tv"
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:text="店铺地址:" />

        <TextView
            android:id="@+id/shopmanagedetail_address_tv"
            style="@style/text_normal_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>



</LinearLayout>
