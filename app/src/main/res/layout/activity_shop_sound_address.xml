<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_horizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.yzf.king.ui.activitys.ShopSoundAddressActivity">

    <include layout="@layout/title_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/shop_bg_gray"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="请重新提交地址信息" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/shop_sound_address_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shop_sound_address"
            style="@style/text_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ysf_text_size_12"
            android:layout_marginTop="@dimen/ysf_text_size_18"
            android:layout_marginBottom="@dimen/ysf_text_size_18"
            android:text="选择地址" />

        <TextView
            android:id="@+id/shop_sound_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/shop_sound_address_iv"
            android:layout_toRightOf="@+id/shop_sound_address"
            android:gravity="right"
            android:text="请选择" />

        <ImageView
            android:id="@+id/shop_sound_address_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/ysf_text_size_12"
            android:background="@mipmap/person_next" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shop_sound_address_dtl"
            style="@style/text_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ysf_text_size_12"
            android:layout_marginTop="@dimen/ysf_text_size_18"
            android:layout_marginBottom="@dimen/ysf_text_size_18"
            android:text="详细地址" />

        <com.xw.repo.XEditText
            android:id="@+id/shop_sound_address_dtl_tv"
            style="@style/text_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/ysf_text_size_10"
            android:layout_toRightOf="@+id/shop_sound_address_dtl"
            android:background="@null"
            android:gravity="right"
            android:hint="街道、楼牌号等"
             />
    </RelativeLayout>

    <Button
        android:id="@+id/shop_sound_address_define_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/ysf_text_size_24"
        android:background="@color/btn_blue"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>
