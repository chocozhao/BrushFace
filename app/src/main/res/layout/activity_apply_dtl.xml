<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.yzf.king.ui.activitys.InstallActivity">

    <include layout="@layout/title_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_horizontal"
            android:showDividers="middle"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ysf_text_size_10"
                android:layout_marginBottom="@dimen/ysf_text_size_10"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/apply_dtl_hear_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:background="@mipmap/shop_manage_hear" />

                <TextView
                    android:id="@+id/apply_dtl_title_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:layout_marginLeft="@dimen/ysf_text_size_10"
                    android:layout_toRightOf="@+id/apply_dtl_hear_iv"
                    android:text=""
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/apply_dtl_stauts_tv"
                    style="@style/text_tip_style"
                    android:layout_below="@+id/apply_dtl_title_tv"
                    android:layout_marginLeft="@dimen/ysf_text_size_10"
                    android:layout_toRightOf="@+id/apply_dtl_hear_iv"
                    android:text=""
                    android:textColor="@color/btn_blue" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_address_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ysf_text_size_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:text="店铺地址:" />

                <TextView
                    android:id="@+id/apply_dtl_address_tv"
                    style="@style/text_normal_style"
                    android:layout_marginLeft="@dimen/ysf_text_size_10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_shopphone_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="店铺联系电话：" />

                <TextView
                    android:id="@+id/apply_dtl_shopphone_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text=""
                    android:textColor="@color/btn_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_receipt_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="店铺编号:" />

                <TextView
                    android:id="@+id/apply_dtl_receipt_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_mail_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="邮箱:" />

                <TextView
                    android:id="@+id/apply_dtl_mail_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_applydate_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="申请时间:" />

                <TextView
                    android:id="@+id/apply_dtl_applydate_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_machinnum_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="申请设备数量:" />

                <TextView
                    android:id="@+id/apply_dtl_machinnum_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="0台" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_date_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="装机时间:" />

                <TextView
                    android:id="@+id/apply_dtl_date_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="供  应  商：" />

                <TextView
                    android:id="@+id/apply_dtl_name_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_phone_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="供应商电话:" />

                <TextView
                    android:id="@+id/apply_dtl_supplierphone_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text=""
                    android:textColor="@color/btn_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_dtl_package_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                >

                <TextView
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="套        餐" />

                <TextView
                    android:id="@+id/apply_dtl_package_tv"
                    style="@style/text_normal_style"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <cn.droidlover.xrecyclerview.XRecyclerView
                        android:id="@+id/apply_dtl_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:recyclerBackgroundColor="@color/bg_gray"
                        app:recyclerScrollbarNone="true"
                        app:recyclerScrollbarStyle="outsideOverlay" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apply_dtl_install_failure_tv"
                        style="@style/text_normal_style"
                        android:layout_margin="@dimen/ysf_text_size_10"
                        android:text="备注："
                        android:textColor="@color/btn_yellow_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apply_dtl_review_failure_tv"
                        style="@style/text_normal_style"
                        android:layout_margin="@dimen/ysf_text_size_10"
                        android:text="备注："
                        android:textColor="@color/btn_yellow_dark" />
                </LinearLayout>

                <Button
                    android:id="@+id/apply_dtl_resubmit_bt"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="@dimen/ysf_text_size_20"
                    android:layout_marginRight="@dimen/ysf_text_size_20"
                    android:background="@drawable/proxy_btn_bg"
                    android:focusable="true"
                    android:text="再次申请"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/apply_dtl_order_bt"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="@dimen/ysf_text_size_20"
                    android:layout_marginRight="@dimen/ysf_text_size_20"
                    android:layout_marginTop="@dimen/ysf_text_size_20"
                    android:background="@drawable/proxy_btn_bg"
                    android:focusable="true"
                    android:text="重新申请订单"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
