<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.yzf.king.ui.activitys.SetteInfoActivity">

    <include layout="@layout/title_toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/bank_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bankcard_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/bank_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circle_bg"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/bank" />

                <TextView
                    android:id="@+id/setteinfo_change_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/line_bg_white"
                    android:padding="5dp"
                    android:text="变更储蓄卡"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/setteinfo_bankname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/bank_iv"
                    android:text="中国银行"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/setteinfo_banktype_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setteinfo_bankname_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/bank_iv"
                    android:text="储蓄卡"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/text_sub" />

                <TextView
                    android:id="@+id/setteinfo_acctno_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setteinfo_banktype_tv"
                    android:layout_alignStart="@+id/setteinfo_bankname_tv"
                    android:layout_alignLeft="@+id/setteinfo_bankname_tv"
                    android:layout_marginTop="8dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_big" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
