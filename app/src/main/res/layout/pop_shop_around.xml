<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pop_shop_around_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="酒店"
        app:layout_constraintEnd_toStartOf="@+id/pop_shop_around_restaurant"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pop_shop_around_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="餐厅"
        app:layout_constraintEnd_toStartOf="@+id/pop_shop_around_attractions"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pop_shop_around_hotel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pop_shop_around_attractions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="景点"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pop_shop_around_restaurant"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pop_shop_around_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="医院"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pop_shop_around_supermarket"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pop_shop_around_hotel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pop_shop_around_supermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="超市"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pop_shop_around_other"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pop_shop_around_hospital"
        app:layout_constraintTop_toBottomOf="@+id/pop_shop_around_restaurant" />

    <TextView
        android:id="@+id/pop_shop_around_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="其他"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pop_shop_around_supermarket"
        app:layout_constraintTop_toBottomOf="@+id/pop_shop_around_attractions"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>