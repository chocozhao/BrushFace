<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/home_goods_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/ysf_text_size_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_goods_iv"
        android:layout_toRightOf="@+id/home_goods_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_goods_title_tv"
            style="@style/text_normal_style"
            android:text="" />

        <TextView
            android:id="@+id/home_goods_context_tv"
            style="@style/text_normal_style"
            android:layout_marginBottom="@dimen/text_sub"
            android:text="产品特点"
            android:textColor="@color/text_6"
            android:textSize="@dimen/text_sub" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_goods_buydesc_tv"
                style="@style/text_normal_style"
                android:text="商家免费申请"
                android:textColor="@color/text_yellow_dark" />

            <TextView
                android:id="@+id/home_goods_amount_tv"
                style="@style/text_normal_style"
                android:layout_marginLeft="@dimen/text_sub"
                android:text="采购￥0.00"
                android:textColor="@color/text_yellow_dark"
                android:textSize="@dimen/text_sub" />

        </LinearLayout>

        <include layout="@layout/line_h" />

    </LinearLayout>
</RelativeLayout>