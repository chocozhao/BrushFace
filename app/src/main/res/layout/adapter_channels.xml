<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.0dip"
    android:layout_marginTop="10.0dip"
    android:layout_marginRight="10.0dip"
    card_view:cardBackgroundColor="@color/bg_white"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/channel_iv_adapter"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:background="@mipmap/icon_channel_plan" />

            <TextView
                android:id="@+id/channel_name_adapter"
                style="@style/text_normal_color_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/channel_iv_adapter"
                android:text="通道" />

            <ImageView
                android:id="@+id/channel_tips_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/channel_name_adapter"
                android:padding="8dp"
                android:src="@mipmap/icon_channel_help" />

            <com.yzf.king.widget.StateButton
                android:id="@+id/channel_bt_adapter"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:text="操作"
                android:textColor="@color/text_white"
                app:normalBackgroundColor="@color/btn_gray"
                app:pressedBackgroundColor="@color/btn_gray_p"
                app:radius="15.0dip" />
        </RelativeLayout>

        <include layout="@layout/line_h" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_color_6"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="最小金额" />

                <TextView
                    android:id="@+id/channel_minamt_adapter"
                    style="@style/text_normal_color_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_color_6"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="最大金额" />

                <TextView
                    android:id="@+id/channel_maxamt_adapter"
                    style="@style/text_normal_color_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_color_6"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="还款费率" />

                <TextView
                    android:id="@+id/channel_fee_adapter"
                    style="@style/text_normal_color_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_color_6"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="交易时间段" />

                <TextView
                    android:id="@+id/channel_time_adapter"
                    style="@style/text_normal_color_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_color_6"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="支持银行" />

                <TextView
                    android:id="@+id/channel_support_adapter"
                    style="@style/text_normal_color_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>