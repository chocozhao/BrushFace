<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="1dp"
    android:background="@color/bg_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_bill_dtl_remark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州番禺区南村镇喜士多"
            android:ellipsize = "marquee"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/adapter_bill_dtl_transdate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:paddingTop="6dp"
            />
    </LinearLayout>
    <TextView
        style="@style/text_normal_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_bill_dtl_transamt_tv"
        android:text="+1000"
        android:paddingLeft="@dimen/ysf_text_size_10"
        android:textSize="@dimen/ysf_text_size_16"
        android:layout_marginRight="@dimen/ysf_text_size_10"
        android:gravity="right|center"
        />
</LinearLayout>