<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/title_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            style="@style/text_normal_color_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/app_name" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:divider="@drawable/divider_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="middle">


            <LinearLayout
                android:id="@+id/about_web_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="官网"
                    android:textColor="@color/text_6" />

                <TextView
                    android:id="@+id/about_web_tv"
                    style="@style/text_normal_color_6"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="www.yibei.com"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@mipmap/next" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_phone_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="客服热线"
                    android:textColor="@color/text_6" />

                <TextView
                    android:id="@+id/about_phone_tv"
                    style="@style/text_normal_color_6"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="020-28029388" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@mipmap/next" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_wx_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信服务号"
                    android:textColor="@color/text_6" />

                <TextView
                    android:id="@+id/about_wx_tv"
                    style="@style/text_normal_color_6"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="汇卡金管家" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@mipmap/next" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
