<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/selector_foreground"
        android:padding="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapter_merch_apply_supplier_dtl_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_investors" />

        <TextView
            android:id="@+id/adapter_merch_apply_supplier_dtl_name_tv"
            style="@style/text_normal_style"
            android:textSize="@dimen/text_14"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:layout_toRightOf="@+id/adapter_merch_apply_supplier_dtl_iv"
            android:layout_centerInParent="true"
            android:text="" />

        <TextView
            android:id="@+id/adapter_merch_apply_supplier_dtl_phone_tv"
            style="@style/text_normal_style"
            android:layout_toRightOf="@+id/adapter_merch_apply_supplier_dtl_name_tv"
            android:layout_marginLeft="@dimen/ysf_text_size_12"
            android:layout_marginTop="@dimen/ysf_text_size_10"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_14"
            android:text="" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="46dp"
        android:background="@color/line_gray" />

</LinearLayout>
