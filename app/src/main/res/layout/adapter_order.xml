<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ysf_text_size_10"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/adapter_order_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_order_date_tv"
            style="@style/text_tip_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:layout_weight="1"
            android:text="@string/adapter_title" />

        <TextView
            android:id="@+id/adapter_order_status_tv"
            style="@style/text_tip_style"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text=""
            android:textColor="@color/btn_yellow_dark" />

    </LinearLayout>

    <ImageView
        android:id="@+id/adapter_order_hear_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/adapter_order_ll"
        android:layout_marginLeft="@dimen/ysf_text_size_10"
        android:layout_marginTop="@dimen/ysf_text_size_10"
        android:background="@mipmap/device" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/adapter_order_hear_iv"
        android:layout_marginLeft="@dimen/ysf_text_size_10"
        android:layout_toRightOf="@+id/adapter_order_hear_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adaper_order_title_tv"
            style="@style/text_normal_style"
            android:text="支付宝刷脸支付二代清廷F4" />

        <TextView
            android:id="@+id/adapter_order_package_tv"
            style="@style/text_normal_style"
            android:layout_below="@+id/adaper_order_title_tv"
            android:layout_marginTop="@dimen/text_sub"
            android:layout_marginBottom="@dimen/text_sub"
            android:text=""
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/adapter_order_count_tv"
            style="@style/text_normal_style"
            android:layout_below="@+id/adapter_order_package_tv"
            android:text="数量："
            android:textColor="@color/text_6"
            android:textSize="@dimen/text_sub" />

        <TextView
            android:id="@+id/adapter_order_amount_tv"
            style="@style/text_tip_style"
            android:layout_alignTop="@+id/adapter_order_count_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ysf_text_size_10"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textColor="@color/btn_yellow_dark" />

    </RelativeLayout>

    <include
        layout="@layout/line_h"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/adapter_order_ll" />


</RelativeLayout>