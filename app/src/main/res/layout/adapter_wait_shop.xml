<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ysf_text_size_10"
    android:orientation="vertical">

    <TextView
        style="@style/text_normal_style"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:text="设备信息" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ysf_text_size_10"
        android:layout_marginBottom="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_tip_style"
            android:text="型        号：" />

        <TextView
            android:id="@+id/adapter_dtl_modelname_tv"
            style="@style/text_tip_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ysf_text_size_10"
        android:layout_marginBottom="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_tip_style"
            android:text="S    N    码：" />

        <TextView
            android:id="@+id/adapter_dtl_sn_tv"
            style="@style/text_tip_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ysf_text_size_10"
        android:layout_marginBottom="@dimen/ysf_text_size_10"

        android:orientation="horizontal">

        <TextView
            style="@style/text_tip_style"
            android:text="激  活   码：" />

        <TextView
            android:id="@+id/adapter_dtl_activate_tv"
            style="@style/text_tip_style"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ysf_text_size_10"
        android:layout_marginBottom="@dimen/ysf_text_size_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_tip_style"
            android:text="序  列   码：" />

        <TextView
            android:id="@+id/adapter_dtl_term_tv"
            style="@style/text_tip_style"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:text="" />
    </LinearLayout>

    <include layout="@layout/line_h" />
</LinearLayout>