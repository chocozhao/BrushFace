<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/shop_around_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:visibility="gone"
        android:background="@mipmap/shop_manage_hear"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ysf_text_size_10"
        android:layout_alignTop="@+id/shop_around_iv"
        android:layout_toRightOf="@+id/shop_around_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_around_title_tv"
            style="@style/text_normal_style"
            android:text=""
            android:layout_marginBottom="6dp"
            android:textSize="@dimen/text_big"
            />

        <TextView
            android:id="@+id/shop_around_rating_tv"
            style="@style/text_tip_style"
            android:layout_marginBottom="6dp"
            android:text="评分"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_around_address_tv"
                style="@style/text_tip_style"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"
                 />

            <TextView
                android:id="@+id/shop_around_amount_tv"
                style="@style/text_tip_style"
                android:layout_marginLeft="@dimen/ysf_text_size_10"
                android:layout_toRightOf="@+id/shop_around_address_tv"
                android:text="人均￥0.00"
                />
            <TextView
                android:id="@+id/shop_around_distance_tv"
                style="@style/text_tip_style"
                android:layout_alignParentRight="true"
                android:text="000km"
                android:maxLines="1"
                android:layout_marginRight="@dimen/ysf_text_size_10"
                android:layout_marginLeft="@dimen/ysf_text_size_10"
                android:drawableLeft="@mipmap/shop_loaction"
                />
        </RelativeLayout>

        <include layout="@layout/line_h" />

    </LinearLayout>
</RelativeLayout>