<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/ysf_text_size_10"
    android:layout_marginRight="@dimen/ysf_text_size_10"
    android:layout_marginTop="@dimen/ysf_text_size_10"
    android:background="@drawable/person_bg_white"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adapter_shop_title_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/shop_credit_merchant" />

            <ImageView
                android:id="@+id/adapter_shop_hear_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/ysf_text_size_10"
                android:layout_marginTop="@dimen/ysf_text_size_10"
                android:layout_marginBottom="@dimen/ysf_text_size_10"
                android:background="@mipmap/head" />

            <TextView
                android:id="@+id/adapter_shop_title_tv"
                style="@style/text_normal_style"
                android:layout_marginLeft="@dimen/ysf_text_size_10"
                android:layout_marginTop="@dimen/ysf_text_size_20"
                android:layout_marginBottom="@dimen/ysf_text_size_10"
                android:layout_toLeftOf="@+id/adapter_shop_title_iv"
                android:layout_toRightOf="@+id/adapter_shop_hear_iv"
                android:text="" />

            <TextView
                android:id="@+id/adapter_shop_run_tv"
                style="@style/text_tip_style"
                android:layout_below="@+id/adapter_shop_title_tv"
                android:layout_alignLeft="@+id/adapter_shop_title_tv"
                android:layout_toRightOf="@+id/adapter_shop_hear_iv"
                android:text="距离您3.2公里"
                android:visibility="gone"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:background="@color/bg_shop_blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_shop_apply_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                tools:text="该商家已通过支付宝官方审核"
                android:textColor="@color/text_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:layout_marginTop="@dimen/ysf_text_size_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shop_date" />

            <TextView
                android:id="@+id/adapter_shop_date_tv"
                style="@style/text_tip_style"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ysf_text_size_10"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ysf_text_size_10"
            android:layout_marginTop="@dimen/ysf_text_size_20"
            android:layout_marginBottom="@dimen/ysf_text_size_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shop_loaction" />

            <TextView
                android:id="@+id/adapter_shop_address_tv"
                style="@style/text_tip_style"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ysf_text_size_10"
                android:layout_marginRight="@dimen/ysf_text_size_10"
                android:text="" />
        </LinearLayout>

        <include layout="@layout/line_h" />

        <Button
            android:id="@+id/shop_define_bt"
            style="@style/text_normal_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:background="@drawable/proxy_btn_bg"
            android:text="我要铺货"
            android:textColor="@color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>