<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pop_shop_around_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="智能排序"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pop_shop_around_recent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pop_shop_around_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="离我最近"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pop_shop_around_highest"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pop_shop_around_sort"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pop_shop_around_highest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/account_bg_gray"
        android:paddingLeft="@dimen/ysf_text_size_24"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/ysf_text_size_24"
        android:paddingBottom="6dp"
        android:text="人均最高"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pop_shop_around_recent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>