<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_marginBottom="1dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ysf_text_size_10"
        >
        <TextView
            android:id="@+id/adapter_bill_month_tv"
            style="@style/text_normal_style"
            android:text="7月"
            android:textStyle="bold"
            android:textSize="@dimen/ysf_text_size_16"
            />

        <TextView
            android:id="@+id/adapter_bill_transdate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="@dimen/ysf_text_size_12"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/adapter_bill_totalamt_tv"
            style="@style/text_normal_style"
            android:text="50000.12"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账单金额"
            android:textSize="@dimen/ysf_text_size_12"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/adapter_bill_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:paddingLeft="@dimen/ysf_text_size_10"
        android:paddingRight="@dimen/ysf_text_size_10"
        android:src="@mipmap/arrow_t"/>
</LinearLayout>