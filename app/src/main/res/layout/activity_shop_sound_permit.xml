<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_horizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.yzf.king.ui.activitys.ShopSoundPermitActivity">

    <include layout="@layout/title_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/shop_bg_gray"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/ysf_text_size_10"
            android:text="请重新提交营业执照信息" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/shop_sound_permit_type_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shop_sound_permit_type"
                    style="@style/text_normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:layout_marginBottom="@dimen/ysf_text_size_18"
                    android:text="营业执照类型" />

                <TextView
                    android:id="@+id/shop_sound_permit_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/shop_sound_permit_iv"
                    android:layout_toRightOf="@+id/shop_sound_permit_type"
                    android:gravity="right"
                    android:text="请选择" />

                <ImageView
                    android:id="@+id/shop_sound_permit_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="@dimen/ysf_text_size_12"
                    android:background="@mipmap/person_next" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_style"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:text="上传营业执照" />

                <TextView
                    style="@style/text_normal_style"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/ysf_text_size_10"
                    android:text="*"
                    android:textColor="@color/btn_yellow_dark"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ysf_text_size_12"
                android:layout_marginTop="@dimen/ysf_text_size_18"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shop_sound_permit_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/permit_add_iv" />
                <TextView
                    android:id="@+id/shop_sound_permit_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/shop_sound_permit_add_iv"
                    android:layout_alignTop="@+id/shop_sound_permit_add_iv"
                    android:padding="5dp"
                    android:text="tips"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_tip"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/shop_sound_permit_add_iv"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_toRightOf="@+id/shop_sound_permit_add_iv"
                    android:text="点击营业执照重新上传
上传营业执照后识别信息如有误，可手动修改"
                    android:textColor="@color/btn_yellow_dark" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shop_sound_permit_shopname"
                    style="@style/text_normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:layout_marginBottom="@dimen/ysf_text_size_18"
                    android:text="店铺名称" />

                <com.xw.repo.XEditText
                    android:id="@+id/shop_sound_permit_shopname_tv"
                    style="@style/text_normal_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:layout_marginRight="@dimen/ysf_text_size_10"
                    android:layout_toRightOf="@+id/shop_sound_permit_shopname"
                    android:gravity="right"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shop_sound_permit_number"
                    style="@style/text_normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:layout_marginBottom="@dimen/ysf_text_size_18"
                    android:text="营业执照号" />

                <com.xw.repo.XEditText
                    android:id="@+id/shop_sound_permit_number_et"
                    style="@style/text_normal_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/ysf_text_size_10"
                    android:layout_toRightOf="@+id/shop_sound_permit_number"
                    android:gravity="right"
                    android:background="@null"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:text="" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shop_sound_permit_legal_person"
                    style="@style/text_normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:layout_marginBottom="@dimen/ysf_text_size_18"
                    android:text="法人" />

                <com.xw.repo.XEditText
                    android:id="@+id/shop_sound_permit_legal_person_tv"
                    style="@style/text_normal_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/ysf_text_size_10"
                    android:background="@null"
                    android:layout_toRightOf="@+id/shop_sound_permit_legal_person"
                    android:gravity="right"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shop_sound_permit_data"
                    style="@style/text_normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ysf_text_size_12"
                    android:layout_marginTop="@dimen/ysf_text_size_18"
                    android:text="营业执照注册时间" />

                <TextView
                    android:id="@+id/shop_sound_permit_data_tv"
                    style="@style/text_tip_style"
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/ysf_text_size_10"
                    android:paddingBottom="@dimen/ysf_text_size_10"
                    android:layout_alignLeft="@+id/shop_sound_permit_data"
                    android:layout_below="@+id/shop_sound_permit_data"
                    android:hint="请选择时间"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/btn_gray"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/shop_sound_permit_define_bt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/ysf_text_size_24"
                android:background="@color/btn_blue"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
